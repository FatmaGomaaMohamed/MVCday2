@{

    int index = 1;
}
@model List<Employee>

<a href="/Employee/Add">Add Employee</a>
<table>
    <thead>
        <tr>
            <th>#</th>
            <th>Name</th>
            <th>Details</th>
            <th>Edit</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var employee in Model)
        {
            <tr>
                <td>@(index++)</td>
                <td>@employee.FirstName</td>
                <td><a href="/ManageEmployee/GetById/@employee.SSN">Details</a></td>
                <td><a href="/ManageEmployee/Edit/@employee.SSN">Edit</a></td>
                <td><a href="/ManageEmployee/delete/@employee.SSN">Delete</a></td>
            </tr>
        }
    </tbody>
</table>